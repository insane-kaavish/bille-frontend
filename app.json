{
  "expo": {
    "name": "Bill-E",
    "slug": "app-bille-fe",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/Bill-E.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/Splash.jpg",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assets": [
      "./extra/fonts/Lato",
      "./extra/fonts/Roboto",
      "./extra/fonts/Outfit/static"
    ],
    "assetBundlePatterns": [
      "./extra/fonts/Lato/*",
      "./extra/fonts/Roboto/*",
      "./extra/fonts/Outfit/static/*"
    ],
    
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        }
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/Bill-E.png",
        "backgroundColor": "#ffffff"
      },
      "usesCleartextTraffic": true,
      "package": "com.anonymous.appbillefe"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
